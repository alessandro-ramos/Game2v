@model Game2v.Model.Game
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "_Layout";
}
<h2 class="display-4">Inserir Novo Jogo</h2>
@{if (ViewBag.Message != null)
{
    @:<div class="alert alert-warning" role="alert">@ViewBag.Message</div>
}}

<form asp-controller="Game" asp-action="GameInsert" method="post">
    <div class="form-group">
        <label asp-for="GameTitle"></label>
        <input type="text" asp-for="GameTitle" class="form-control"/>
        <span asp-validation-for="GameTitle" class="form-text text-muted"></span>
    </div>

    <div class="form-group">
        <label asp-for="FriendId"></label>
        <select asp-for="FriendId" asp-items="@ViewBag.Friends" class="form-control">
            <option value="">Com quem está o jogo? (ninguém)</option>
        </select>
        <span asp-validation-for="FriendId" class="message" class="form-text text-muted"></span>
    </div>

    <button type="submit" class="btn btn-primary">Salvar</button>
    <a asp-controller="Game" asp-action="List" class="btn btn-secondary">Voltar</a>

</form>
